FROM nvidia/cuda:12.0-base-ubuntu20.04  # Or your preferred CUDA base image

WORKDIR /app

# Install dependencies (including torch, transformers if needed)
COPY requirements.txt .
RUN pip install -r requirements.txt

COPY . .

# Expose the LLM port
EXPOSE 8000

CMD ["python", "llm_service.py"] # Start your LLM service